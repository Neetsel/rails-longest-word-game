<h1>New Game</h1>
<div>
  <ul>
    <li><%= @letters[0]%></li>
    <li><%= @letters[1]%></li>
    <li><%= @letters[2]%></li>
    <li><%= @letters[3]%></li>
    <li><%= @letters[4]%></li>
    <li><%= @letters[5]%></li>
    <li><%= @letters[6]%></li>
    <li><%= @letters[7]%></li>
    <li><%= @letters[8]%></li>
    <li><%= @letters[9]%></li>
  </ul>
</div>
<div>
  <form action="/score" method="post" data-turbo="false">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <label for="word">What is the longest word you can find?</label>
    <input type="text" id="word" name="word">
    <input id="lettersSample" name="lettersSample" type="hidden" value="<%= @letters%>" />
    <input type="submit" value="Play">
  </form>
</div>
